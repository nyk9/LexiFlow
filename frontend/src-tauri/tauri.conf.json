{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LexiFlow",
  "version": "0.1.0",
  "identifier": "com.lexiflow.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "LexiFlow - English Learning",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "plugins": {
    "deep-link": {
      "mobile": {
        "scheme": "lexiflow",
        "host": "oauth"
      },
      "desktop": {
        "schemes": ["lexiflow"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

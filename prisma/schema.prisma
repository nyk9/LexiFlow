// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts              Account[]
  sessions              Session[]
  words                 Word[]
  dateRecords           DateRecord[]
  conversationSessions  ConversationSession[]

  @@map("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model Word {
  id           String   @id @default(cuid())
  word         String
  meaning      String
  translation  String?
  partOfSpeech String[]
  phonetic     String?
  example      String?
  category     String?
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("words")
}

model DateRecord {
  id        String   @id @default(cuid())
  date      String // YYYY-MM-DD format
  add       Int      @default(0)
  update    Int      @default(0)
  quiz      Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, userId])
  @@map("date_records")
}

// AI Conversation Analytics Tables

model ConversationSession {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startedAt       DateTime @default(now())
  endedAt         DateTime?
  durationMinutes Int?

  topics              ConversationTopic[]
  linguisticAnalysis  LinguisticAnalysis?
  skillsAssessment    SkillsAssessment?
  vocabularySuggestions VocabularySuggestion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("conversation_sessions")
}

model ConversationTopic {
  id              String   @id @default(cuid())
  sessionId       String
  session         ConversationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  topic           String
  orderSequence   Int
  complexityLevel String?
  createdAt       DateTime @default(now())

  @@map("conversation_topics")
}

model LinguisticAnalysis {
  id                 String   @id @default(cuid())
  sessionId          String   @unique
  session            ConversationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  avgSentenceLength  Float?
  vocabularyLevel    String?
  grammarComplexity  String?
  createdAt          DateTime @default(now())

  @@map("linguistic_analysis")
}

model SkillsAssessment {
  id                            String   @id @default(cuid())
  sessionId                     String   @unique
  session                       ConversationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  grammarAccuracyScore          Float?
  vocabularyAppropriatenessScore Float?
  sentenceComplexityScore       Float?
  flowSmoothnessScore           Float?
  responseTimingAvg             Float?
  naturalPhraseUsageScore       Float?
  createdAt                     DateTime @default(now())

  @@map("skills_assessments")
}

model VocabularySuggestion {
  id                  String   @id @default(cuid())
  sessionId           String
  session             ConversationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  suggestedWord       String
  userWordUsed        String?
  conversationContext String?
  suggestionReason    String?
  status              String   @default("pending") // pending, accepted, dismissed
  createdAt           DateTime @default(now())

  @@map("vocabulary_suggestions")
}
